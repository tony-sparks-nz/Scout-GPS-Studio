# Scout GPS Test - udev rules for USB serial GPS device access
# Install to /etc/udev/rules.d/ then run: sudo udevadm control --reload-rules

# u-blox GPS receivers
SUBSYSTEM=="tty", ATTRS{idVendor}=="1546", MODE="0666"

# Prolific PL2303 (common GPS USB adapter)
SUBSYSTEM=="tty", ATTRS{idVendor}=="067b", MODE="0666"

# FTDI (common GPS USB adapter)
SUBSYSTEM=="tty", ATTRS{idVendor}=="0403", MODE="0666"

# Silicon Labs CP210x (common GPS USB adapter)
SUBSYSTEM=="tty", ATTRS{idVendor}=="10c4", MODE="0666"

# QinHeng CH340 (common GPS USB adapter)
SUBSYSTEM=="tty", ATTRS{idVendor}=="1a86", MODE="0666"

# SiRF Technology
SUBSYSTEM=="tty", ATTRS{idVendor}=="0ecc", MODE="0666"

# GlobalSat
SUBSYSTEM=="tty", ATTRS{idVendor}=="1546", MODE="0666"

# Fallback: grant access to all USB serial devices
SUBSYSTEM=="tty", SUBSYSTEMS=="usb", MODE="0666"
