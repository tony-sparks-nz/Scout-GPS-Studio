{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Scout GPS Test",
  "version": "1.0.0",
  "identifier": "com.vortexnav.scout-gps-test",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Scout GPS Test",
        "width": 1200,
        "height": 800,
        "fullscreen": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": ["libc6", "libwebkit2gtk-4.1-0", "libgtk-3-0"],
        "section": "utility",
        "priority": "optional"
      }
    }
  }
}
