{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GPS Studio",
  "version": "3.42.0",
  "identifier": "com.vortexmarine.gps-studio",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Vortex Marine Limited - GPS Studio — © 2025 All Rights Reserved — Licensed Software",
        "width": 1200,
        "height": 800,
        "fullscreen": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": ["libc6", "libwebkit2gtk-4.1-0", "libgtk-3-0"],
        "section": "utility",
        "priority": "optional"
      }
    }
  }
}
